<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/taskListFragment">

    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.example.taskify.fragments.TaskListFragment"
        tools:layout="@layout/fragment_task_list"
        android:label="Task List">
        <action
            android:id="@+id/action_taskListFragment_to_addTaskFragment"
            app:destination="@id/addTaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/addTaskFragment"
        android:name="com.example.taskify.fragments.AddTaskFragment"
        tools:layout="@layout/fragment_add_task"
        android:label="Add Task"
        android:theme="@style/Theme.MaterialComponents.Dialog.Alert" >
        <action
            android:id="@+id/action_addTaskFragment_to_taskListFragment"
            app:destination="@id/taskListFragment" />
    </fragment>

</navigation>
